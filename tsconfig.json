{
  "compilerOptions": {
    "target": "ES2016",                   // Target modern JavaScript for compatibility
    "module": "CommonJS",                 // Use CommonJS module system
    "rootDir": "./src",                   // Define source directory
    "outDir": "./dist",                   // Define output directory for compiled files
    "esModuleInterop": true,              // Enable compatibility with CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,                       // Enable strict type-checking options
    "skipLibCheck": true                  // Skip checking types in declaration files
  },
  "include": ["src"],                     // Include the `src` folder for compilation
  "exclude": ["node_modules"]             // Exclude `node_modules` folder
}
